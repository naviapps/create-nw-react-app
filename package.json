{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "cd packages/nw-react-scripts && node bin/nw-react-scripts.js build",
    "changelog": "lerna-changelog",
    "create-nw-react-app": "node tasks/cnra.js",
    "publish": "tasks/publish.sh",
    "start": "cd packages/nw-react-scripts && node bin/nw-react-scripts.js start",
    "test": "cd packages/nw-react-scripts && node bin/nw-react-scripts.js test",
    "format": "prettier --write 'packages/*/*.js' 'packages/*/!(node_modules)/**/*.js'"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "alex": "^11.0.0",
    "eslint": "^8.3.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "get-port": "^5.1.1",
    "globby": "^11.0.4",
    "husky": "^4.3.8",
    "jest": "^27.4.3",
    "lerna": "^4.0.0",
    "lerna-changelog": "^2.2.0",
    "lint-staged": "^12.1.2",
    "meow": "^9.0.0",
    "multimatch": "^5.0.0",
    "prettier": "^2.5.0",
    "puppeteer": "^12.0.1",
    "strip-ansi": "^6.0.1",
    "svg-term-cli": "^2.1.1",
    "tempy": "^1.0.1",
    "wait-for-localhost": "^3.3.0",
    "web-vitals": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,yml,yaml,css,scss,ts,tsx,md}": [
      "prettier --write"
    ]
  }
}
